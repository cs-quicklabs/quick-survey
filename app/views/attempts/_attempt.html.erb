<% survey = attempt.survey %>
<% participant = attempt.participant %>
<tr class="bg-white " id="<%= dom_id(attempt) %>">
  <td class=" whitespace-nowrap  table-cell">
    <a href="surveys/<%= survey.id %>/reports/<%= attempt.survey.survey_type %>/<%= attempt.id %>" class="hover:underline">
      <p> <%= survey.name.upcase_first %></p>
    </a>
  </td>
  <td class=" whitespace-nowrap  table-cell">
    <p> <%= participant.name.upcase_first %></p>
  </td>
  <td class=" whitespace-nowrap  table-cell">
    <p> <%= participant.email %></p>
  </td>
  <td class=" whitespace-nowrap  table-cell">
   <% if attempt.actor %>
   <a href="<%= user_attempts_path(attempt.actor) %>" class="text-indigo-600 hover:text-indigo-900">
    <p><%= attempt.actor.decorate.display_name %></p>
    </a>
    <% end %>
  </td>
  <td class=" whitespace-nowrap  table-cell">
    <p> <%= attempt.created_at.to_date.to_formatted_s(:long) %></p>
  </td>
  <td class="table-cell whitespace-nowrap space-x-6">
    <a target="_blank" href="surveys/<%=attempt.survey_id%>/pdf/<%= survey.survey_type %>/<%=attempt.id%>.pdf"  class="inline-flex justify-center px-2 py-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      Download PDF
    </a>
  </td>
</tr>
