<div class="flex justify-self-end " data-attempt-target="attempt" id="<%= dom_id(question) %>">
  <% 10.times do |i| %>
    <% score = i + 1 %>
    <% if question.marked_score(attempt) <= i %>
      <button type="button" data-account-id="<%= survey.account_id %>" data-action="click->attempt#scored" data-score="<%= score %>" data-attempt-id="<%= attempt.id %>" data-question-id="<%= question.id %>" data-option-id="<%= question.options.first.id %>" name="<%= question.id %>" class="ml-1 inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <%= score %>
      </button>
    <% else %>
      <button type="button" data-account-id="<%= survey.account_id %>" data-action="click->attempt#scored" data-score="<%= score %>" data-attempt-id="<%= attempt.id %>" data-question-id="<%= question.id %>" data-option-id="<%= question.options.first.id %>" name="<%= question.id %>" class="ml-1 inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-white bg-indigo-700 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <%= score %>
      </button>
    <% end %>
  <% end %>
</div>
