<main class="relative z-0 flex-1 focus:outline-none ">
  <!-- Page title & actions -->
  <div class="px-4 py-4    border-b border-gray-200   sm:px-6 lg:px-8">
    <div class="flex flex-wrap items-baseline">
      <h1 class="text-2xl font-bold leading-tight text-gray-900">
        Select Survey
      </h1>
    </div>
    </div>
<div class="sm:block" data-controller="infinite-scroll">
  <div class="inline-block min-w-full align-middle ">
    <table class="table">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="w-full table-head">
            Survey
          </th>
          <th scope="col" class="w-full table-head">
            Participant
          </th>
          <th scope="col" class="w-full table-head">
            Email
          </th>
          <th scope="col" class="w-full table-head">
            Submitted by
          </th>
          <th scope="col" class="table-head">
            Date
          </th>
          <th scope="col" class="table-head">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="table-body" id="attempts" data-infinite-scroll-target="entries">
        <%= render partial: "attempt", collection: @attempts, as: :attempt, cached: false %>
      </tbody>
    </table>
    <div class="flex justify-end invisible mt-2 mb-6 mr-2" data-infinite-scroll-target="pagination">
      <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
    </div>
  </div>
</div>
