<div class="relative flex items-start w-full pt-2" id="<%= dom_id(question)%>">
  <div class="ml-3 text-sm w-full">
    <label for="comments" class="font-medium text-gray-700 overflow-y-auto"><%= question.text %></label>
    <p id="comments-description" class="text-gray-500 overflow-y-auto"><%= question.description %></p>
  </div>
  <div class="flex justify-self-end ">
    <% 10.times do |i|%>
      <button type="button" class="ml-2 inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <%= i+1 %>
      </button>
    <% end %>
  </div>
</div>
