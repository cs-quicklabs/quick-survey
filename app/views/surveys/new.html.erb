<div class="min-h-full flex  justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Add New Survey
      </h3>
    </div>
    <%= form_with(model: @survey, id: dom_id(@survey), url: surveys_path) do |form| %>
      <div class="mt-8 space-y-6">
        <input type="hidden" name="remember" value="true">
        <div class=" -space-y-px">
          <div>
            <label for="first-name" class="block text-sm font-medium text-gray-700">
              Survey Name
            </label>
            <%= form.text_field :name, required: true, autocomplete: "off", class: "mt-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <div class="sm:col-span-4 pt-6">
            <label for="first-name" class="block text-sm font-medium text-gray-700">
              Survey Description
            </label>
            <%= form.text_area :description, required: true, class: "mt-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <div class="sm:col-span-4 pt-6">
            <label for="email" class="block text-sm font-medium text-gray-700">
              Survey Type
            </label>
            <%= form.select(:survey_type, [["Checklist", 0], ["Score", 1]], { selected: params["survey_type"] }, :class => "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm mt-1") %>
          </div>
        </div>
        <div class="pt-5">
          <div class="flex justify-end">
            <%= link_to "Back", "javascript:history.back()", class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-g-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 no-underline" %>
            <button type="submit" class="ml-3  inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Add Survey
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
