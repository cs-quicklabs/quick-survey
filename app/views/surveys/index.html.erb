<!-- This example requires Tailwind CSS v2.0+ -->
<main class="relative z-0 flex-1 focus:outline-none ">
  <!-- Page title & actions -->
  <div class="px-4 py-4    border-b border-gray-200 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="flex flex-wrap items-baseline">
      <h1 class="text-2xl font-bold leading-tight text-gray-900">
        Select Survey
      </h1>
    </div>
    <div class="flex  w-full max-w-3xl px-2 lg:ml-6 "  data-behavior="autocomplete" data-controller="nav-search" data-nav-search-url-value="<%=current_user.account_id%>/search/surveys">
      <div class="w-full  ">
        <div class="relative ">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none" >
            <!-- Heroicon name: solid/search -->
            <svg class="w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
          <input id="survey-search" name="search" class="pl-10 pr-3 max-w-3xl block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-3xl sm:text-sm border-gray-300 rounded-md" placeholder="Search Survey" type="search" data-nav-search-target="input">
        </div>
        <div class="relative">
          <div class="absolute left-0 z-10 block w-full mt-2 origin-top-right bg-white rounded-md shadow-lg  focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
            <ul data-nav-search-target="results" id="results">
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to "Add New Survey", new_survey_path, class: "ml-3  inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
  <div class="sm:block">
    <div class="inline-block min-w-full align-middle " data-controller="infinite-scroll">
      <div>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="relative px-6 py-3">
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200" id="surveys" data-infinite-scroll-target="entries">
            <%= render partial: "survey", collection: @surveys, as: :survey, cached: true %>
          </tbody>
        </table>
        <div class="flex justify-end invisible mt-2 mb-6 mr-2" data-infinite-scroll-target="pagination">
          <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
