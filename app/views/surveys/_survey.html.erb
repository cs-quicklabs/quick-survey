 
<tr class="bg-white" id="<%= dom_id(survey) %>">
  <td class="py-3 flex whitespace-nowrap text-sm font-medium text-gray-900">
    <a href="<%= survey_path(survey.id) %>" class="bg-white py-2 px-4 text-sm font-medium text-gray-700 hover:underline focus:outline-none">
      <%= survey.name %>
    </a>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "Edit", edit_survey_path(survey), class: "text-indigo-600 hover:text-indigo-900" %>
    <%= link_to "Show", survey_path(survey), class: "ml-4 text-indigo-600 hover:text-indigo-900" %>
    <%= styled_delete_button(survey_path(survey), "text-indigo-600 hover:text-indigo-900 ml-4") %>
  </td>
</tr>
