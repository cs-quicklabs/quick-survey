<div id="user-tabs">
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="flex -mb-px space-x-8 lg:px-6" aria-label="Tabs">
          <a href="<%= user_attempts_path(user) %>" class="<%= current_page?(user_attempts_path(user)) ? "selected-tab" : "unselected-tab" %>">
            Attempts
          </a>
      <%if !user.member?%>
  <a href="<%= user_surveys_path(user) %>" class="<%= current_page?(user_surveys_path(user)) ? "selected-tab" : "unselected-tab" %>">
            Surveys
          </a>
          <% end %>
           <a href="<%= user_spaces_path(user) %>" class="<%= current_page?(user_spaces_path(user)) ? "selected-tab" : "unselected-tab" %>">
            Spaces
          </a>
      </nav>
    </div>
  </div>
</div>
