<%= turbo_frame_tag dom_id(@user) do %>
  <%= tailwind_form_with(model: @user, id: dom_id(@user), url: set_permission_path(@user.id)) do |form| %>
    <%= render "shared/form_messages", resource: @user, message: local_assigns[:message] %>
    <li>
     <label for="name" class="block mt-3 ml-3 text-sm font-bold text-gray-700">
     <% if @user.first_name? %>
        <%= "Edit " + @user.decorate.display_name + "'s Permission" %>
        <% else %>
         <%= "Edit " + @user.email + "'s Permission" %>
        <% end %>
      </label>
      <div class="flex pt-2 pb-4 border-b border-gray-200">
        <div class="flex w-1/3 ml-3">
          <div class="w-full">
            <div class=" my-4">
              <label for="permission" class="block my-4 mx-4 text-sm font-medium text-gray-700">
                Permission
              </label>
              <%= form.select :permission, User::Permissions, {:prompt => "Choose Permission"}, class: "form-text-field mt-1 mx-4" %>
            </div>
         </div>
          
      </div>
      <div class="flex justify-end py-20 pr-6">
            <%= form.submit "Save", class: "btn-blue mt-6" %>
          </div>
          </div>
          
    </li>
  <% end %>
<% end %>
