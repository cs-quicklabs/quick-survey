<%= tailwind_form_with(model: folder, id: "edit_folder_form", url: space_folder_path(@space, folder), method: :patch, data: { slideover_target: "form", controller: "validate" }, html: { novalidate: true }) do |form| %>
  <main class="max-w-xl px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: folder, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Edit Folder", subtitle: "Please update folder in existing space titled #{@folder.space.title}" %>
    <%= form.text_field :title, "Title", autocomplete: "off" %>
    <input type="hidden" name="folder[user_id]" value="<%= current_user.id %>">
    <input type="hidden" name="folder[space_id]" value="<%= space.id %>">
    <div class="relative flex items-start">
      <div class="flex h-5 items-center">
        <input id="send_email" aria-describedby="comments-description" name="send_email" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" checked="checked">
      </div>
    </div>
    <div class="flex justify-between">
      <div class="flex justify-start inline-flex">
        <%= link_to "Cancel", space_folder_path(space, folder), class: "btn-normal mr-2" %>
      </div>
      <div>
      </div>
      <div class="flex  inline-flex">
        <%= form.submit "Update", class: "btn-blue" %>
      </div>
    </div>
  </main>
<% end %>
