<% survey = @attempt.survey %>
<div class="overflow-y-auto w-full">
  <div class="pt-4">
    <label for="comment" class="block text-sm font-medium text-gray-700">
      Comments (optional)
    </label>
    <h4 class="text-sm leading-tight text-gray-400 pb-4">Please add a note if you want to add anything about this survey</h4>
    <p class="whitespace-pre-wrap   block w-full sm:text-sm  rounded-md"><%= @attempt.comment %></p>
  </div>
  <div class=" sm:col-span-4 flex justify-end overflow-y-auto py-6 pr-2">
    <div class="flex justify-start py-12">
      <%= link_to "Back", "javascript:history.back()", class: "justify-self-start ml-4 bg-white py-2 px-4 border  rounded-md shadow-sm text-sm font-medium text-g-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 no-underline" %>
    </div>
    <div class="flex justify-end w-full py-12">
      <%= button_tag "Copy Report URL ", class: "font-medium text-sm px-2 py-1.5 rounded bg-gray-100 no-underline hover:bg-gray-200", data: {controller: "copy-url", action: "click->copy-url#copyUrl"} %>
      <%= link_to "Edit", new_survey_attempt_path(@attempt), class: "ml-4 bg-white py-2 px-4 border  rounded-md shadow-sm text-sm font-medium text-g-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 no-underline" %>
      <a target="_blank" href="/<%= survey.account_id %>/surveys/<%= attempt.survey_id %>/pdf/<%= survey.survey_type %>/<%= attempt.id %>.pdf"  class="ml-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Download PDF
      </a>
    </div>
  </div>
</div>
