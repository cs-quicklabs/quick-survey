<tr class="bg-white" id="<%= dom_id(user) %>">
  <td class="table-cell ">
    <a class="bg-white py-2  text-sm font-medium text-gray-700  focus:outline-none">
      <%= user.decorate.display_name %>
    </a>
  </td>
  <td class="table-cell ">
    <%= user.email %>
  </td>
   <td class="table-cell ">
    <%= display_created_at(user) %>
  </td>
   <td class="table-cell status ">
    <div class="text-sm text-gray-500"><%= user.role %></div>
    <% if user.sign_in_count > 0 %>
      <p class="flex items-center text-sm text-gray-500">
        Joined      
        <!-- Heroicon name: solid/check-circle -->
        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </p>
    <% elsif user.invitation_created_at.nil? %>
      <a  href="<%= resend_invitation_user_path(user) %>" class="text-blue-600 cursor-pointer hover:underline btn-inline-edit">Invite</a>
    <% else %>
      <%= link_to "Resend Invitation", resend_invitation_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </td>
  <% if current_user.admin? %>
    <td class="table-cell space-x-6">
    <%= link_to "View", user_attempts_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
        <%= link_to "Edit", edit_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Deactivate", deactivate_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
    </td>
  <% end %>
</tr>
