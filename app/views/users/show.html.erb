  <% @user = @user.decorate %>
<div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8" id="user-header">
  <div class="flex flex-wrap items-baseline -mt-2 -ml-2">
    <h1 class="text-3xl font-bold leading-tight text-gray-900">
      <%= @user.display_name %>
    </h1>
    <% if current_user.admin? or current_user.lead? %>
      <p class="mt-1 ml-2 text-sm text-gray-500 truncate">(<%= @user.role.upcase_first %>)</p>
    <% end %>
     </div>
     <div>
            <%= link_to "Edit", edit_user_path(@user), class: " btn-normal" %>
      
          <% if @user.active %>
            
              <%= confirm_button(deactivate_user_path(@user), "Deactivate", "Are you sure?", "ml-4 btn-normal") %>
            
          <% else %>
            
              <%= confirm_button(activate_user_path(@user), "Activate", "Are you sure?", "ml-4  btn-normal") %>
            
          <% end %>
        </div>
    </div>
    <%= render partial: "users/tabs", locals: { user: @user } %>
