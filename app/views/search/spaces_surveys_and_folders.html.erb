<div class="mb-2">
<% @surveys.each do |result| %>
  <a href="<%= survey_path(result) %>">
    <li role="option" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900">
      <%= result.name %>
    </li>
  </a>
<% end %>
</div>
<% if @surveys.size > 0 && @spaces.size > 0 %>
  <div class="my-2 mb-4">
    <div class="absolute inset-x-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="flex justify-start absolute inset-x-0  items-center">
      <span class=" -mt-2  px-4 pr-2 text-sm italic font-bold text-gray-500 bg-white" role="option">
        Spaces
      </span>
    </div>
  </div>
<% end %>
<% @spaces.each do |result| %>
  <a href="<%= space_folders_path(result) %>">
    <li role="option" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900">
      <%= result.title.upcase_first %>
    </li>
  </a>
<% end %>
<% if (@surveys.size > 0 or @spaces.size > 0) && @folders.size > 0 %>
  <div class="mb-4">
    <div class="absolute inset-x-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="flex justify-start absolute inset-x-0  items-center">
      <span class=" -mt-2  px-4 pr-2 text-sm italic font-bold text-gray-500 bg-white" role="option">
        Folders
      </span>
    </div>
  </div>
<% end %>
<% @folders.each do |result| %>
  <a href="<%= space_folder_path(result.space, result) %>">
    <li role="option" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900">
      <%= result.title.upcase_first %>
    </li>
  </a>
<% end %>